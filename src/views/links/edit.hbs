<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/links/edit/{{links.id}}" method="POST">
            <div class="form-group mb-3">
              <input
                type="text"
                class="form-control"
                name="title"
                value="{{links.title}}"
                placeholder="title"
                autofocus
              />
            </div>
            <div class="form-group mb-3">
              <input
                type="url"
                name="url"
                value="{{links.url}}"
                class="form-control"
                placeholder="url"
              />
            </div>
            <div class="form-group mb-3">
              <textarea
                name="description"
                rows="2"
                class="form-control"
                placeholder="description"
              >{{links.description}}</textarea>
            </div>
            <div class="form-group mb-3">
              <button class="btn btn-success w-100 btn-block">
                Save
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>