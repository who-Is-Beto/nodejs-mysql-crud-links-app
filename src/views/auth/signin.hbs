<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Sign In!</h3>
        </div>
        <div class="card-body">
          <img
            src="/images/user.png"
            alt="user image"
            class="card-img-top mx-auto m-lg-3 rounded-circle w-50"
          />
          <form action="/signin" method="POST">
            <div class="form-group mb-3">
              <input
                type="text"
                name="username"
                placeholder="Username"
                class="form-control"
              />
            </div>
            <div class="form-group mb-3">
              <input
                type="password"
                placeholder="Password"
                name="password"
                class="form-control"
              />
            </div>
            <div class="form-group mb-3">
              <button class="btn btn-success btn-block">
                SignIn
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>